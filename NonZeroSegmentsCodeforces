#include <bits/stdc++.h>
using namespace std;

int main() {
    int n;
    cin >> n;
    vector<int> a(n);
    
    for (int i = 0; i < n; ++i) {
        cin >> a[i];
    }

    unordered_set<int> d;
    d.insert(0);
    int cur = 0;
    int ans = 0;

    for (int i = 0; i < n; ++i) {
        cur += a[i];
        if (d.find(cur) != d.end()) {
            ans += 1;
            d.clear();
            d.insert(0);
            cur = a[i];
        }
        d.insert(cur);
    }

    cout << ans << endl;

    return 0;
}
