#include<bits/stdc++.h>
using namespace std;
const int mx = 1e7+12;
long long int v[mx];
int main(){
    int n,q;cin>>n>>q;
    
    while(q--){
        int a, b, k;
        cin>>a>>b>>k;
        // for(int i=a; i<=b; ++i){
        //     v[i] += k;
        // }
        v[a] += k;
        v[b+1] -= k;
    }
    for(int i=1; i<=n; ++i){
        v[i] += v[i-1];
    }
    long long maxi = INT_MIN;
    for(auto u:v){
        if(u>maxi)
            maxi = u;
    }
    cout<<maxi<<endl;
}
