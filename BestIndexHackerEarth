#include<bits/stdc++.h>
using namespace std;


int main()
{
    long n,i,k,j,left,p=0,max=INT_MIN;
    cin>>n;
    long a[n],sum;
    for(i=0;i<n;i++)
    {
        cin>>a[i];
        if(i>0)
        a[i]+=a[i-1];
    }
    for(i=0;i<n;i++)
    {
        left=n-i;
        sum=0;
        k=(-1+(int)sqrt((double)(8*left+1)))/2;
        sum=a[(k*(k+1))/2+i-1];
        if(i!=0)
        sum-=a[i-1];
        if(max<sum)
        max=sum;
    }
   cout<<max<<endl;
}
